{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "strict": true,
    "strictNullChecks": false,
    "noStrictGenericChecks": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "pretty": true,
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "dom", 
      "dom.iterable", 
      "es2017",      
      "es2015.iterable",
      "es2015.promise",
      "es2017.object",
      "es2016.array.include", 
      "esnext.asynciterable"
    ],
    "plugins": [
      { "name": "tslint-language-service" }
    ]
  },
  "compileOnSave": false,
  "include": ["src/*.ts"]
}
